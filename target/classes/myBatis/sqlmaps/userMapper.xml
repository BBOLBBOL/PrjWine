	<insert id="UserInsert">

		INSERT INTO TUSER (
		U_NO,
		U_ID,
		U_PW,
		U_NAME,
		U_BIRTH,
		U_SI,
		U_GU,
		U_PHONE
		) VALUES (
		( SELECT NVL(MAX(U_NO),0)+1 FROM TUSER),
		#{ u_id },
		#{ u_pw },
		#{ u_name },
		#{ u_birth },
		#{ u_si },
		#{ u_gu },
		#{ u_phone }
		)

	</insert>
